@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company list</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Company" asp-action="Upsert">Create new company</a>
        </div>
    </div>

    <div class="clearfix mt-3"> </div>

    <table id="datatableCompanys" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.StreetAddress
                    </td>
                    <td>
                        @obj.City
                    </td>
                    <td>
                        @obj.State
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-area="Admin" asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                             <a class="btn btn-danger mx-2" asp-area="Admin" asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

                            
@section Scripts{
    <script src="~/js/companyIndex.js"></script>
}