@model IEnumerable<CoverTypeModel>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover type list</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="CoverType" asp-action="Create">Create new cover type</a>
        </div>
    </div>

    <div class="clearfix mt-3"> </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                             <a class="btn btn-danger mx-2" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>