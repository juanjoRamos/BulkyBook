@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products list</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">Create new product</a>
        </div>
    </div>

    <div class="clearfix mt-3"> </div>

    <table id="datatableProducts" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/productIndex.js"></script>
}