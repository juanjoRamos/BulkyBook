@model ShoppingCart

<form method="post">
    <div class="card container pt-4">
        <div class="card-header bg-primary text-light ml-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-warning">@Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height: 38px;">@Model.Product.CoverType.Name</span>
                <span class="badge bg-warning pt-2" style="height: 38px;">@Model.Product.Category.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">
                            <h5 class="text-muted">ISBN: @Model.Product.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">Previous price: <strike>$@(500.ToString("0.00"))</strike></h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">Price: $ @Model.Product.Price</h5>
                        </div>
                        <div class="row pl-2">
                             <h5 class="text-secondary">@Html.Raw(Model.Product.Description)</h5>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-2 text-primary"><input class="form-control" asp-for="Count" /></div>
                        </div>
                    </div>
                    <div class="col-2 col-lg-2 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control" style="height: 50px;">Back to list</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" class="btn btn-primary form-control" style="height:50px;">Add to cart</button>
                </div>
            </div>
        </div>
    </div>
</form>